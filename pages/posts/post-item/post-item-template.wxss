.post-container{
  display: flex;
  flex-direction: column; /* 垂直（列）布局 */
  margin-top:20rpx;
  margin-bottom:40rpx;
  background-color:#fff;
  border-bottom:1px solid #ededed;
  border-top:1px solid #ededed;
  padding-bottom: 5px;  
}
.post-author-data{
  margin: 10rpx 0 20rpx 23rpx;
}

.post-author{
  width:60rpx;
  height:60rpx;
  vertical-align:middle;
}

.post-data{
  vertical-align:middle;
  font-size: 26rpx;
  color:#747474;
  margin-left: 20px; /* padding和margin都支持 */
  /*margin-bottom: 5rpx;*/ /* 内联元素不支持上下的padding和margin */
}

.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 23rpx;
}

.post-image{
  width:100%;
  height:340rpx;
  margin-bottom: 15px;
}

.post-content{
  color:#666;
  font-size:28rpx;
  margin-bottom: 20rpx;
  margin-left:20rpx; 
}

.post-like{
    font-size:13px;
    line-height: 16px;
    margin-left: 10px;
}

.post-like-image{
    height:16px;
    width:16px;
    margin-right: 8px;
    vertical-align:middle;
}

.post-like-font{
    vertical-align:middle;
    margin-right: 20px;
}